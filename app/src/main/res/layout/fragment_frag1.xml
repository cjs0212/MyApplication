<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="잡음 제거 동영상 앱 "
        android:textColor="@android:color/holo_blue_dark"

        android:textSize="30sp" />


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/VideoLoad_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        app:layout_constraintStart_toStartOf="@+id/videoView"
        app:layout_constraintTop_toBottomOf="@id/videoView"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginRight="25dp"
        tools:ignore="OnClick"></Button>

        <Button

            android:layout_marginTop="15dp"
            android:id="@+id/Video_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/videoView"
            app:layout_constraintTop_toBottomOf="@id/videoView"
            android:background="@drawable/button"
            android:gravity="center"
            android:textColor="#ffffff"></Button>




        <Button
            android:id="@+id/VideoAmplification_btn"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="voice amplification"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/VideoEnhancement_btn"
            app:layout_constraintTop_toBottomOf="@id/VideoLoad_btn"
            tools:ignore="OnClick"></Button>

        <Button
            android:id="@+id/VideoEnhancement_btn"
            android:layout_marginTop="15dp"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="13dp"
            android:text="잡음 제거"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/VideoAmplification_btn"
            app:layout_constraintTop_toBottomOf="@id/Video_btn"
             />

    <Button
        android:id="@+id/btn55"
        android:layout_marginTop="15dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="원본 저장"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/VideoEnhancement_btn"
        app:layout_constraintTop_toBottomOf="@id/VideoAmplification_btn"
         />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="13dp"
        android:text="음성 증폭"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn55"
        app:layout_constraintTop_toBottomOf="@id/VideoAmplification_btn"
        android:id="@+id/btn11"
        />


</androidx.constraintlayout.widget.ConstraintLayout>